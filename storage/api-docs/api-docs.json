    "components": {
        "schemas": {
            "Activity": {
                "title": "Activity Log",
                "description": "Activity log entry",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "event": {
                        "type": "string",
                        "example": "updated"
                    },
                    "description": {
                        "type": "string",
                        "example": "Task status changed from Pending to Completed"
                    },
                    "causer": {
                        "$ref": "#/components/schemas/User"
                    },
                    "properties": {
                        "type": "object",
                        "example": {
                            "old": {
                                "status": "Pending"
                            },
                            "new": {
                                "status": "Completed"
                            }
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "example": "24-Aug-2025 21:05"
                    }
                },
                "type": "object"
            },
            "PaginatedTasks": {
                "properties": {
                    "status": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Tasks retrieved successfully"
                    },
                    "code": {
                        "type": "integer",
                        "example": 200
                    },
                    "data": {
                        "type": "array",
