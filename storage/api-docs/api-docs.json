                                "example": 150
                            }
                        },
                        "type": "object"
                    },
                    "links": {
                        "properties": {
                            "first": {
                                "type": "string",
                                "example": "http://your-app.test/api/v1/tasks?page=1"
                            },
                            "last": {
                                "type": "string",
                                "example": "http://your-app.test/api/v1/tasks?page=10"
                            },
                            "prev": {
                                "type": "string",
                                "example": null,
                                "nullable": true
                            },
                            "next": {
                                "type": "string",
                                "example": "http://your-app.test/api/v1/tasks?page=2"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "TaskRequest": {
                "required": [
                    "title",
                    "description"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "New Task"
                    },
                    "description": {
                        "type": "string",
                        "example": "Task description"
                    },
                    "status_id": {
                        "description": "Optional status ID",
                        "type": "integer",
                        "example": 1
                    },
                    "assigned_to": {
                        "description": "Optional assigned to ID",
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Task": {
                "title": "Task",
                "description": "Task model",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Title"
                    },
                    "description": {
                        "type": "string",
